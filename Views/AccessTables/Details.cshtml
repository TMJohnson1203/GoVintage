@model GoVintage.Models.AccessTable

@{
    ViewBag.Title = "Details";
}

<h2>Accessory Details</h2>


<div class="container-fluid accessdetailsrow">
    <div row="col-xs-6 col-sm-6 col-md-4 col-lg-4">
           <h3>@Html.DisplayFor(modelItem => Model.AccessName)</h3>
            <img src="@Html.DisplayFor(modelItem => Model.AccessPhoto)" width="220" height="400"  />
        </div>

        <div class="detailsection col-xs-6 col-sm-6 col-md-8 col-lg-8">
            <h3>Details</h3>
            @Html.DisplayNameFor(model => model.AccessType)

            @Html.DisplayFor(model => model.AccessType)

            @Html.DisplayNameFor(model => model.AccessColor)
            
            @Html.DisplayFor(model => model.AccessColor)
               
            @Html.DisplayNameFor(model => model.AccessSeason)
                
            @Html.DisplayFor(model => model.AccessSeason)
               
            @Html.DisplayNameFor(model => model.AccessOccasion)
               
            @Html.DisplayFor(model => model.AccessOccasion)
             
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.AccessID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>
    


