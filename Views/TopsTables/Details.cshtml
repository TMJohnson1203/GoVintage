@model GoVintage.Models.TopsTable

@{
    ViewBag.Title = "Details";
}

<h1>Tops Details</h1>

<row class="topsdetails col-sm-6 col-md-4">
    <h1>@Html.DisplayFor(modelItem => Model.TopsName)</h1>
    <div img src="@Url.Content(Model.TopsPhoto)" width="220" height="400" />
    <h1>Swim Details</h1>
    <li>@Html.DisplayNameFor(model => model.TopsType)  :  @Html.DisplayFor(model => model.TopsType)</li>
    <li>@Html.DisplayNameFor(model => model.TopsColor)  :  @Html.DisplayFor(model => model.TopsColor)</li>
    <li> @Html.DisplayNameFor(model => model.TopsSeason)  :  @Html.DisplayFor(model => model.TopsSeason)</li>
    <li> @Html.DisplayNameFor(model => model.TopsOccasion)  :  @Html.DisplayFor(model => model.TopsOccasion)</li>
</row>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TopsID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
