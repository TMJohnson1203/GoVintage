@model IEnumerable<GoVintage.Models.DressesTable>

@{
    ViewBag.Title = "Index";
}

<h2>Dresses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3> @Html.DisplayNameFor(model => model.DressesName)</h3>
                    <img src="@Html.DisplayFor(modelItem => item.DressesPhoto)" />
                    <p>@Html.DisplayNameFor(model => model.DressesPhoto)</p>
                </div>
                @Html.ActionLink("Edit", "Edit", new { id = item.DressesID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DressesID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DressesID })
            </div>
        </div>
    }
</div>



