@model IEnumerable<GoVintage.Models.BottomsTable>

@{
    ViewBag.Title = "Index";
}

<h2>Bottoms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3> @Html.DisplayNameFor(model => model.BottomsName)</h3>
                    <img src="@Html.DisplayFor(modelItem => item.BottomsPhoto)" />
                    <p>@Html.DisplayNameFor(model => model.BottomsPhoto)</p>
                </div>

                @Html.ActionLink("Edit", "Edit", new { id = item.BottomsID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BottomsID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BottomsID })

            </div>
        </div>
    }
</div>


